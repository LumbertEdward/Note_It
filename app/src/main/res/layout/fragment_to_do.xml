<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back"
    tools:context=".Fragments.ToDoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/relSearchTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_back"
            android:padding="10dp"
            android:layout_margin="15dp"
            >
            <ImageView
                android:id="@+id/searchImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search ToDo..."
                android:layout_toRightOf="@id/searchImg"
                android:textColor="@color/icons"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/layoutTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_dns_24"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:cardBackgroundColor="@color/back_items"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="15dp"
                    >
                    <LinearLayout
                        android:id="@+id/linearAll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_assignment_24"
                            android:scaleType="fitXY"
                            android:layout_marginTop="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Tasks"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunitobold"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 items"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunitoregular"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:cardBackgroundColor="@color/back_items"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="15dp"
                    >
                    <LinearLayout
                        android:id="@+id/linearPersonal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_perm_contact_calendar_24"
                            android:scaleType="fitXY"
                            android:layout_marginTop="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunitobold"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 items"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunitoregular"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:cardBackgroundColor="@color/back_items"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="15dp"
                    >
                    <LinearLayout
                        android:id="@+id/linearWork"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_work_24"
                            android:scaleType="fitXY"
                            android:layout_marginTop="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunitobold"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 items"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunitoregular"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:cardBackgroundColor="@color/back_items"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="15dp"
                    >
                    <LinearLayout
                        android:id="@+id/linearOthers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_add_24"
                            android:scaleType="fitXY"
                            android:layout_marginTop="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/nunitobold"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 items"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunitoregular"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</FrameLayout>